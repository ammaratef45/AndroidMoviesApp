<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.life.ammar.movies.DetailsFragment"
    tools:showIn="@layout/details"
    android:weightSum="1">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_marginTop="@dimen/doubleD"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:background="@color/grey"
                android:id="@+id/backIV"/>
            <TextView
                android:layout_marginTop="@dimen/base"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/titleT"
                android:id="@+id/titleTextView"/>
            <TextView
                android:layout_marginTop="@dimen/base"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/releaseT"
                android:id="@+id/releaseDateTextView"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_fav"
                android:layout_gravity="center_horizontal"
                android:id="@+id/favouriteImage"/>
            <TextView
                android:layout_marginTop="@dimen/base"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/colorPrimaryDark"
                android:id="@+id/voteAvgTextView"/>
            <TextView
                android:layout_marginTop="@dimen/base"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/base"
                android:layout_marginRight="@dimen/base"
                android:textColor="@color/overView"
                android:id="@+id/overviewTextView"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/posterImage"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Run Trailer"
                android:textColor="@color/trailer"
                android:drawableLeft="@android:drawable/ic_media_play"
                android:id="@+id/trailerTV"/>
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ListView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:id="@+id/reviewsList"
                        android:layout_weight=".4">
                    </ListView>
                    </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
